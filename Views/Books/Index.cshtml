@model IEnumerable<LibApp.Models.Book>

@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>

@if (User.IsInRole("Owner") || User.IsInRole("StoreManager"))
{
    <p>
        <a class="btn btn-primary" asp-action="New">New Book</a>
    </p>
}
<table id="books" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Book</th>
        <th>Genre</th>
        @if (User.IsInRole("Owner") || User.IsInRole("StoreManager"))
            {
                <th>Delete</th>
            }
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts 
{
    <script>
        $(document).ready(function () {
            $("#books").DataTable({
                ajax: {
                    url: "api/books/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, book) {
                            return "<a href='api/books/details/" + book.id + "'>" + book.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    
                    @if (User.IsInRole("Owner") || User.IsInRole("StoreManager"))
                    {
                        <text>
                    {
                        
                        data: "id",
                        render: function (data, book) {
                            
                                return "<button class='btn btn-secondary js-delete' data-books-id=" + data + ">Delete</button>";
                                
                        }
                    }   
                    </text>    
                    }
                ]
            });
        });
    </script>

     <script>
        $(document).ready(function () {
            var table = $("#books").DataTable();
            $("#books").on("click", ".js-delete", function () {
                 
                var button = $(this);
                bootbox.confirm({
                    message: "This action cannot be undone, are you sure?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/books/" + button.attr("data-books-id"),
                                method: "DELETE",
                                success: function () {
                                    table.row(button.parents("tr")).remove().draw();
                                },
                                error: function (request, status, error) {
                                    bootbox.alert({
                                    message: "Access denied",
                                    })
                                }
                            });
                        }
                    }
                });
            });
        });
    </script>

}